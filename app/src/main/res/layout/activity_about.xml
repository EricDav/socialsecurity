<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidalienyi.socialsecurity.Activities.AddSocial">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The social security application is an application that helps you manage your social media account passwords In a secure manner. "
            android:layout_marginRight="10sp" />
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It also encourages users to change their passwords periodically which enhances secure measures. Passwords are encrypted and decrypted when users want to reveal their password. For users to reveal their passwords they will need to enter their six digit alphanumeric pin which is created before they can save their passwords in the app. "
            android:layout_marginRight="10sp" />
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social  security  also share some security tips or good practice users can follow to be secured on social media"
            android:layout_marginRight="10sp" />

    </LinearLayout>

</ScrollView>