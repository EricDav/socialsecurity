<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/entry_height"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >


    <TextView
        android:id="@+id/socialHandleNameId"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:singleLine="true"
        android:text="The Money"
        android:layout_marginTop="@dimen/entry_layout_margin_top"
        android:layout_marginStart="@dimen/entry_summary_margin_start"
        android:layout_marginLeft="@dimen/entry_summary_margin_start"
        android:textSize="@dimen/entry_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contentSummaryId"
        android:layout_width="match_parent"
        android:layout_height="@dimen/entry_layout_margin"
        android:layout_marginTop="@dimen/entry_layout_margin_top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dateId"
        android:ellipsize="end"
        android:text="The Money"
        android:layout_marginStart="@dimen/entry_summary_margin_start"
        android:layout_marginLeft="@dimen/entry_summary_margin_start"
        android:fontFamily="serif"
        android:singleLine="true"
        android:textSize="@dimen/content_summary_text_size" />

    <TextView
        android:id="@+id/dateId"
        android:layout_marginTop="@dimen/entry_layout_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/entry_margin_right"
        android:textSize="@dimen/entry_date_text_size"
        android:text="The Money"
        android:textColor="#3F51B5"
        />
</RelativeLayout>